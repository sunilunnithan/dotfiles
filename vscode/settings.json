{
  "breadcrumbs.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 16,
  "editor.matchBrackets": "always",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.glyphMargin": false,
  "editor.wordBasedSuggestions": "off",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },
  "editor.roundedSelection": false,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.folding": false,
  "editor.insertSpaces": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "FiraCode-Retina, Calibiri",
  "editor.fontLigatures": true,
  "editor.fontWeight": "450",
  "terminal.integrated.fontFamily": "FiraCode-Retina, Calibiri",
  "terminal.integrated.fontLigatures": true,
  "editor.suggestSelection": "first",
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.git": true,
    "**/.factorypath": true
  },
  "python.languageServer": "Pylance",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.colorTheme": "Sapphire (Dim)",
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "left",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.buildFlags": [
    "-v"
  ],
  "go.useLanguageServer": true,
  "go.autocompleteUnimportedPackages": true,
  "go.testEnvFile": "",
  "go.toolsManagement.autoUpdate": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.cursorSurroundingLines": 10,
  "workbench.enableExperiments": false,
  // "workbench.sidebar.visible": false,
  //vim settings
  "vim.leader": "<Space>",
  "vim.easymotion": true,
  "vim.enableNeovim": false,
  "vim.cursorStylePerMode.insert": "underline",
  "vim.sneak": true,
  "vim.smartRelativeLine": true,
  "vim.visualstar": true,
  "vim.neovimUseConfigFile": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,
  "vim.changeWordIncludesWhitespace": true,
  "vim.searchHighlightColor": "rgba(150, 255, 255, 0.3)",
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": [
        "j",
        "k"
      ],
      "after": [
        "<ESC>"
      ]
    },
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<ESC>"
      ]
    },
    {
      "before": [
        "k",
        "j"
      ],
      "after": [
        "<ESC>"
      ]
    }
  ],
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "vsicons.dontShowNewVersionMessage": true,
  "window.zoomLevel": 1,
  "workbench.activityBar.location": "hidden"
}